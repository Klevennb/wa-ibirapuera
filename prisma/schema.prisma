generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
  // uncomment next line if you use Prisma <5.10
  // directUrl = env("DATABASE_URL_UNPOOLED")
}

model Post {
  id      String   @id @default(cuid())
  title    String
  createdAt DateTime @default(now())
  creatorId String
  postContents Json?
}

model Session {
  id        String   @id
  expiresAt DateTime
  userId    String
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model User {
  id           String    @id @default(cuid())
  sessions     Session[]
  firstName    String
  lastName     String
  email        String    @unique
  passwordHash String
}